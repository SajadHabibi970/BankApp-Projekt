@page "/createAccount"
@using BlazorApp2.Domain
@using BlazorApp2.Interfaces
@inject IAccountService AccountService
<h3>Skapa konto</h3>

<EditForm Model="_model" OnValidSubmit="CreateBankAccountAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-2">
        <label>Kontonamn</label>
        <InputText class="form-control" @bind-Value="_model.Name" />
    </div>

    <div class="mb-2">
        <label>Kontotyp</label>
        <InputSelect class="form-select" @bind-Value="_model.AccountType">
            <option value="@AccountType.Deposit">Bankkonto</option>
            <option value="@AccountType.Saving">Sparkonto</option>
        </InputSelect>
    </div>

    <div class="mb-2">
        <label>Valuta</label>
        <InputText class="form-control" @bind-Value="_model.Currency" />
    </div>

    <div class="mb-2">
        <label>Startsaldo</label>
        <InputNumber class="form-control" @bind-Value="_model.InitialBalance" />
    </div>

    <button type="submit" class="btn btn-success">Skapa konto</button>
</EditForm>

@if (_accounts.Any())
{
    <h4 class="mt-4">Dina konton</h4>
    <ul>
        @foreach (var account in _accounts)
        {
            <li>@account.Name â€“ @account.Balance @account.Currency</li>
        }
    </ul>
}

@code {
    private readonly CreateAccountModel _model = new();
    private List<IBankAccount> _accounts = new();

    protected override async Task OnInitializedAsync()
    {
        _accounts = await AccountService.GetAccounts();
    }

    private async Task CreateBankAccountAsync()
    {
        await AccountService.CreateBankAccount(
            _model.Name,
            _model.AccountType,
            _model.Currency,
            _model.InitialBalance
        );

        _accounts = await AccountService.GetAccounts();
        _model.Clear();
    }

    private class CreateAccountModel
    {
        public string Name { get; set; } = "";
        public AccountType AccountType { get; set; } = AccountType.Deposit;
        public string Currency { get; set; } = "SEK";
        public decimal InitialBalance { get; set; } = 0;

        public void Clear()
        {
            Name = "";
            AccountType = AccountType.Deposit;
            Currency = "SEK";
            InitialBalance = 0;
        }
    }
}